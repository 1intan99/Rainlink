{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "plugin": ["typedoc-material-theme"],
    "themeColor": "#c2e9ff",
    "out": "docs",
    "entryPoints": "src/Rainlink.ts",
    "exclude": [
      "src/Plugin/Apple/*.ts",
      "src/Plugin/index.ts",
      "src/Plugin/Deezer/*.ts",
      "src/Library/**/*.ts",
      "src/index.ts",
      "src/manifest.ts",
      "src/Node/RainlinkWebsocket.ts",
    ]
  }
}
